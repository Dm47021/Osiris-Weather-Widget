<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">
  <TextView android:id="@+id/forecast_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="N/A"/>
  <TextView android:id="@+id/forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forecast_day"
            android:layout_alignBaseline="@id/forecast_day"
            android:textColor="?android:attr/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="N/A"/>
  <ImageView android:id="@+id/forecast_weather_icon"
             android:layout_width="48dp"
             android:layout_height="48dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             android:layout_below="@id/forecast_day"
             android:scaleType="fitCenter"
             android:src="@drawable/ic_unknown"/>
  <TextView android:id="@+id/forecast_temp_min_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forecast_weather_icon"
            android:layout_below="@id/forecast_day"
            android:layout_alignBaseline="@+id/forecast_temp_min"
            android:layout_marginRight="5dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:singleLine="true"
            android:text="@string/min"/>
  <TextView android:id="@id/forecast_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forecast_temp_min_title"
            android:layout_below="@id/forecast_day"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="28sp"
            android:singleLine="true"
            android:text="N/A"/>
  <TextView android:id="@+id/forecast_temp_max_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forecast_temp_min"
            android:layout_alignBaseline="@id/forecast_temp_min"
            android:layout_marginRight="5dp"
            android:layout_below="@id/forecast_day"
            android:textColor="?android:attr/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:singleLine="true"
            android:text="@string/max"/>
  <TextView android:id="@+id/forecast_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forecast_temp_max_title"
            android:layout_alignBaseline="@id/forecast_temp_min"
            android:layout_below="@id/forecast_day"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="28sp"
            android:singleLine="true"
            android:text="N/A"/>
  <TextView android:id="@+id/forecast_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forecast_weather_icon"
            android:layout_below="@id/forecast_day"
            android:layout_marginTop="32sp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:singleLine="true"
            android:text="N/A"/>
</RelativeLayout>